@model FlashSale.Areas.Admin.Model.TaiKhoanShopModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Sửa tài khoản shop</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">

                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.db.ID)
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên shop", "db.TenShop", Model.db.TenShop, false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên tài khoản", "db.Username", Model.db.Username, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Email", "db.Email", Model.db.Email, false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Số điện thoại", "db.SoDienThoai", Model.db.SoDienThoai, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Địa chỉ", "db.DiaChi", Model.db.DiaChi, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Facebook", "db.Facebook", Model.db.Facebook, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh bìa <input type="file" name="AnhBiaUpload" onchange="ShowImagePreviewAnhBia(this, document.getElementById('previewAnhBia'))"></label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.AnhBia)" style=" aspect-ratio: 16/9;" id="previewAnhBia">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh đại diện <input type="file" name="AnhDaiDienUpload" onchange="ShowImagePreviewAnhBia(this, document.getElementById('previewAnhDaiDien'))"></label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.AnhDaiDien)" style=" aspect-ratio: 16/9;" id="previewAnhDaiDien">
                                            </div>
                                        </div>
                                    </div>

