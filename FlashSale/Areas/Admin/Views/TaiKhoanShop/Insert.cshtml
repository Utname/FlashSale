@model FlashSale.Areas.Admin.Model.TaiKhoanShopModel

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@{
    Model.db.AnhBia = "~/Areas/Admin/Content/FileUpload/Images/2024-7-7/design_patten.jpg";
    Model.db.AnhDaiDien = "~/Areas/Admin/Content/FileUpload/Images/2024-7-7/design_patten.jpg";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Thêm tài khoản shop</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">

                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên shop", "db.TenShop", Model.db.TenShop, false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên tài khoản", "db.Username", Model.db.Username, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Email", "db.Email", Model.db.Email, false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Số điện thoại", "db.SoDienThoai", Model.db.SoDienThoai, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Địa chỉ", "db.DiaChi", Model.db.DiaChi, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Facebook", "db.Facebook", Model.db.Facebook, false))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh bìa <input type="file" name="AnhBiaUpload" onchange="ShowImagePreviewAnhBia(this, document.getElementById('previewAnhBia'))"></label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.AnhBia)" style="aspect-ratio: 16/9;" id="previewAnhBia">
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh đại diện <input type="file" name="AnhDaiDienUpload" onchange="ShowImagePreviewAnhBia(this, document.getElementById('previewAnhDaiDien'))"></label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.AnhDaiDien)" style="aspect-ratio: 16/9;" id="previewAnhDaiDien">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1">
                                                    <a href="~/Admin/TaiKhoanShop/Index" style="color:black">Đóng</a>
                                                </button>
                                                <input type="submit" value="Thêm" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        CKEDITOR.replace("NoiDung");

        function OpenCkfinderAnhBia() {
            var finder = new CKFinder();
            finder.selectActionFunction = SetUrlAnhBia;
            finder.popup();
        }
        function OpenCkfinderAnhDaiDien() {
            var finder = new CKFinder();
            finder.selectActionFunction = SetUrlAnhDaiDien;
            finder.popup();
        }

        function SetUrlAnhBia(fileUrl) {
            $('input[name=AnhBia]').val(fileUrl);
        }
        function SetUrlAnhDaiDien(fileUrl) {
            $('input[name=AnhDaiDien]').val(fileUrl);
        }
    </script>
}
