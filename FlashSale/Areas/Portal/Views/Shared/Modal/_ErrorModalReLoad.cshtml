
@model FlashSale.Areas.Portal.Model.ModalViewReLoadModel

<div class="modal fade" id="errorModal" tabindex="-1" role="dialog" aria-labelledby="errorModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <!-- Changed to bg-danger for a red header -->
                <h5 class="modal-title" id="errorModalLabel">@Model.Title</h5>
                <button type="button" class="close text-white" onclick="redirectToClose()" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Model.SubTitle
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" onclick="redirectToClose()">@Model.SubClose</button> <!-- Changed to btn-danger for a red button -->
            </div>
        </div>
    </div>
</div>


<script>
    function redirectToClose() {
        location.reload();
    }
</script>