@model FlashSale.Areas.Admin.Model.TaiKhoanShopModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Sửa tài khoản shop</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">

                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.db.ID)
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên shop", "db.TenShop", Model.db.TenShop, true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên tài khoản", "db.Username", Model.db.Username, true))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Email", "db.Email", Model.db.Email, true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Số điện thoại", "db.SoDienThoai", Model.db.SoDienThoai, true))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Địa chỉ", "db.DiaChi", Model.db.DiaChi, true))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Facebook", "db.Facebook", Model.db.Facebook, true))
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh bìa </label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.AnhBia)" style=" aspect-ratio: 16/9;" />
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh đại diện</label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.AnhDaiDien)" style=" aspect-ratio: 16/9;" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1"> <a href="~/Admin/TaiKhoanShop/Index" style="color:black">Đóng</a></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

