@model FlashSale.Areas.Admin.Model.DonHangModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Xem đơn hàng</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.db.ID)

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonSelect/_FormDropdown", Tuple.Create("Shop", "db.idShop", new Data.mapTaiKhoanShopSystem().getListUse().Select(x => new SelectListItem { Value = x.id.ToString(), Text = x.name }), Model.db.idShop.ToString(), true, "", ""))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Số điện thoại", "db.SoDienThoai", Model.db.SoDienThoai ?? "", true))
                                        </div>
                                    </div>

                                    <!-- Address Input -->
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Địa chỉ giao hàng", "db.DiaChiGiaoHang", Model.db.DiaChiGiaoHang ?? "", true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormDateTimeInput", Tuple.Create("Thời gian đặt hàng", "db.ThoiGianDatHang", Model.db.ThoiGianDatHang, true))
                                        </div>
                                    </div>

                                    <!-- Money Inputs -->
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Tổng tiền sản phẩm", "TongTienSanPhamView", Model.TongTienSanPhamView ?? "", "formatNumber(this)", true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Triết khấu", "TrietKhauView", Model.TrietKhauView ?? "", "formatNumber(this)", true))
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Phí ship", "PhiShipView", Model.PhiShipView ?? "", "formatNumber(this)", true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonSelect/_FormDropdown", Tuple.Create("Vat", "db.idVat", new Data.mapVat().getListUse().Select(x => new SelectListItem { Value = x.id.ToString(), Text = x.name }), Model.db.idVat.ToString(), true, "", "calculateTax()"))
                                        </div>
                                    </div>

                                    <!-- VAT and Total Payment -->
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Vat", "VatView", Model.VatView ?? "", "formatNumber(this)", true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Tổng thanh toán", "TongThanhToanView", Model.TongThanhToanView ?? "", "formatNumber(this)", true))
                                        </div>
                                    </div>

                                    <!-- Customer Notes -->
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Khách hàng ghi chú", "db.KhacHangGhiChu", Model.db.KhacHangGhiChu ?? "", true))
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1"><a href="~/Admin/DonHang/Index" style="color:black">Đóng</a></button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        CKEDITOR.replace("NoiDung");

        function formatNumber(input) {
            let value = input.value.replace(/,/g, ''); // Remove existing commas
            if (value) {
                input.value = parseFloat(value).toLocaleString('en-US'); // Format number with commas
            } else {
                input.value = '';
            }
        }
    </script>
}
