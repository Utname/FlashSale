
@model FlashSale.Areas.Portal.Model.ModalViewModel

<div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="successModalLabel">@Model.Title</h5>
                <button type="button" class="close" onclick="redirectToClose()" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Model.SubTitle
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="redirectToClose()">@Model.SubClose</button>
                <button type="button" class="btn btn-secondary" onclick="redirectToDetails()">@Model.SubDetails</button>

            </div>
        </div>
    </div>
</div>

<script>
    function redirectToClose() {
        @Html.Raw(Model.RedirectFunctionClose)
    }
       function redirectToDetails() {
        @Html.Raw(Model.RedirectFunctionDetails)
    }
</script>