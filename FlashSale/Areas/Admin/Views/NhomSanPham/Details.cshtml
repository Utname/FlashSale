@model FlashSale.Areas.Admin.Model.NhomSanPhamModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Chi tiết nhóm sản phẩm</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">

                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberMainInputFeild", Tuple.Create("Thứ tự", "db.ThuTu", Model.db.ThuTu, true))
                                        </div>

                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberMainInputFeild", Tuple.Create("ID Cấp cha", "db.idCapCha", Model.db.idCapCha, true))
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên nhóm", "db.TenNhom", Model.db.TenNhom, true))
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1">
                                                    <a href="~/Admin/NhomSanPham/Index" style="color:black">Đóng</a>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
