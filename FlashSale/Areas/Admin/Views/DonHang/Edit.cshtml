@model FlashSale.Areas.Admin.Model.DonHangModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Sửa đơn hàng</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.db.ID)

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonSelect/_FormDropdown", Tuple.Create("Shop", "db.idShop", new Data.mapTaiKhoanShopSystem().getListUse().Select(x => new SelectListItem { Value = x.id.ToString(), Text = x.name }), Model.db.idShop.ToString(), false, "", ""))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Số điện thoại", "db.SoDienThoai", Model.db.SoDienThoai ?? "", false))
                                        </div>
                                    </div>

                                    <!-- Address Input -->
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Địa chỉ giao hàng", "db.DiaChiGiaoHang", Model.db.DiaChiGiaoHang ?? "", false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormDateTimeInput", Tuple.Create("Thời gian đặt hàng", "db.ThoiGianDatHang", Model.db.ThoiGianDatHang, false))
                                        </div>
                                    </div>

                                    <!-- Money Inputs -->
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Tổng tiền sản phẩm", "TongTienSanPhamView", Model.TongTienSanPhamView ?? "", "formatNumber(this)", false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Triết khấu", "TrietKhauView", Model.TrietKhauView ?? "", "formatNumber(this)", false))
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Phí ship", "PhiShipView", Model.PhiShipView ?? "", "formatNumber(this)", false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonSelect/_FormDropdown", Tuple.Create("Vat", "db.idVat", new Data.mapVat().getListUse().Select(x => new SelectListItem { Value = x.id.ToString(), Text = x.name }), Model.db.idVat.ToString(), false, "", "calculateTax()"))
                                        </div>
                                    </div>

                                    <!-- VAT and Total Payment -->
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Vat", "VatView", Model.VatView ?? "", "formatNumber(this)", true))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberInputField", Tuple.Create("Tổng thanh toán", "TongThanhToanView", Model.TongThanhToanView ?? "", "formatNumber(this)", true))
                                        </div>
                                    </div>

                                    <!-- Customer Notes -->
                                    <div class="form-group row">
                                        <div class="col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Khách hàng ghi chú", "db.KhacHangGhiChu", Model.db.KhacHangGhiChu ?? "", false))
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1">
                                                    <a href="~/Admin/DonHang/Index" style="color:black">Đóng</a>
                                                </button>
                                                <input type="submit" value="Sửa" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        CKEDITOR.replace("NoiDung");

        function replaceNum(num) {
            return parseFloat(num.replace(/,/g, ''));
        }

        function totalPayMoney() {
            var tongTienSanPham = parseFloat(replaceNum(document.querySelector('input[name="TongTienSanPhamView"]').value)) || 0;
            var trietKhau = parseFloat(replaceNum(document.querySelector('input[name="TrietKhauView"]').value)) || 0;
            var phiShip = parseFloat(replaceNum(document.querySelector('input[name="PhiShipView"]').value)) || 0;
            var vat = parseFloat(replaceNum(document.querySelector('input[name="VatView"]').value)) || 0;

            var tongThanhToan = tongTienSanPham + trietKhau + phiShip + vat;
            document.querySelector('input[name="TongThanhToanView"]').value = tongThanhToan.toLocaleString('en-US');
        }

        function formatNumber(input) {
            var regex = /[a-zA-Z]/;
            if (regex.test(input.value)) {
                input.value = '0';
                return;
            }
            let value = input.value.replace(/,/g, ''); // Remove existing commas
            input.value = value ? parseFloat(value).toLocaleString('en-US') : '0';
            totalPayMoney();
        }

        function calculateTax() {
            var vat = document.getElementsByName("db.idVat")[0];
            var vatValue = vat.value;

            var tongTienSanPham = parseFloat(replaceNum((document.querySelector('input[name="TongTienSanPhamView"]').value))) || 0;
            if (tongTienSanPham > 0) {
                var taxAmount = (tongTienSanPham * parseInt(vatValue)) / 100;
                document.querySelector('input[name="VatView"]').value = taxAmount.toLocaleString('en-US');
                totalPayMoney();
            }
        }
    </script>
}
