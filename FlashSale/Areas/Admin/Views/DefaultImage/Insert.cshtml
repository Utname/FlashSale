@model FlashSale.Areas.Admin.Model.DefaultImageModel

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3 ">Thêm cấu hình ảnh mặc định</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên", "db.Name", Model.db.Name, false))
                                        </div>
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonSelect/_FormDropdown",
                                               Tuple.Create("Loại", "db.Type", new Data.mapDefaultImage().GetListDefaultImage().Select(x => new SelectListItem { Value = x.id.ToString(), Text = x.name }),
                                                Model.db.Type.ToString(), false, "Type", ""))
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">
                                                Hình ảnh <input type="file" name="Image" onchange="ShowImagePreviewAnhBia(this, document.getElementById('previewAnhBia'))">
                                            </label>

                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.Image)" style="aspect-ratio: 16/9;" id="previewAnhBia">
                                            </div>
                                        </div>

                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Ảnh đại diện <input type="file" name="CoverImage" onchange="ShowImagePreviewAnhBia(this, document.getElementById('previewAnhDaiDien'))"></label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.CoverImage)" style="aspect-ratio: 16/9;" id="previewAnhDaiDien">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1"> <a href="~/Admin/DefaultImage/Index" style="color:black">Đóng</a></button>
                                                <input type="submit" value="Thêm" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script>

    </script>
}
