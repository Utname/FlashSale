@model FlashSale.Areas.Admin.Model.NhomSanPhamModel

@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    Model.db.Image = "~/Areas/Admin/Content/FileUpload/Images/2024-7-7/design_patten.jpg";

}

<div class="main-content-inner">
    <div class="row">
        <div class="col-12">
            <div class="row">
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="pl-3">Thêm nhóm sản phẩm</h3>
                            <br>
                            <form enctype="multipart/form-data" method="post">
                                @Html.AntiForgeryToken()
                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberMainInputFeild", Tuple.Create("Thứ tự", "db.ThuTu", Model.db.ThuTu, false))
                                        </div>

                                        <div class="col-md-6 col-12">
                                            @Html.Partial("CommonInput/_FormNumberMainInputFeild", Tuple.Create("ID Cấp cha", "db.idCapCha", Model.db.idCapCha, false))
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.Partial("CommonInput/_FormTextInput", Tuple.Create("Tên nhóm", "db.TenNhom", Model.db.TenNhom, false))
                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6 col-12">
                                            <label class="control-label col-md-12">Hình ảnh <input type="file" name="Image" onchange="ShowImagePreviewImage(this, document.getElementById('previewImage'))"></label>
                                            <div class="col-md-12">
                                                <img src="@Url.Content(Model.db.Image)" style="aspect-ratio: 16/9;" id="previewImage">
                                            </div>
                                        </div>

                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-12">
                                                <button type="button" class="btn btn-default mr-1">
                                                    <a href="~/Admin/NhomSanPham/Index" style="color:black">Đóng</a>
                                                </button>
                                                <input type="submit" value="Thêm" class="btn btn-primary" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
