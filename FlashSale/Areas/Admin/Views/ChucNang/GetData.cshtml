@model IEnumerable<Data.Entity.ChucNang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@{
    int i = 0;
    var controller = "ChucNang";
}
@*<h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
<div class="main-content-inner">
    <div class="row">
        <div class="col-12 mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="header-title">Chức năng</h4>
                    <form id="formFilters" runat="server">
                        <div class="form-group row">
                            <div class="col-md-6 col-12">
                                <label class="control-label col-md-12">Tìm kiếm(Mã chức năng | Tên chức năng)</label>
                                <div class="col-md-12">
                                    <input class="form-control form-control-lg" type="text" name="search" value="@ViewBag.search">
                                </div>
                            </div>
                            <div class="col-md-6 col-12">
                                <label class="control-label col-md-12">Trạng thái</label>
                                <div class="col-md-12">
                                    <select class="form-control form-control-lg" name="statusDel" value="@ViewBag.statusDel">
                                        @foreach (var item in new Data.mapCommon().GetListStatusDel())
                                        {
                                            <option value="@item.id" @(item.id == @ViewBag.statusDel ? "selected" : "")>@item.name</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-success mb-3 mr-1">
                                <a href="~/Admin/ChucNang/Insert" style="color:white">Thêm</a>
                            </button>
                            <button type="submit" class="btn btn-primary mb-3 mr-1" name="filter"> Tìm kiếm</button>
                        </div>
                    </form>
                    <div class="col-12" style="overflow:hidden; overflow-x:auto">
                        <table id="example" class="display table-striped table-bordered" cellspacing="0" width="100%">
                            <thead class="text-uppercase bg-primary text-white">
                                <tr>
                                    <th width="80"></th>
                                    <th width="50">STT</th>
                                    <th>Mã chức năng</th>
                                    <th>Tên chức năng</th>
                                    <th>Chức năng</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="dropdown col-lg-6 col-md-4 col-sm-6">
                                                <button class="btn btn-rounded btn-outline-primary dropdown-toggle" type="button" data-toggle="dropdown">Chức năng</button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                                    <a class="dropdown-item" href="~/Admin/ChucNang/Details?id=@item.MaChucNang">Xem</a>
                                                    <a class="dropdown-item" href="~/Admin/ChucNang/Edit?id=@item.MaChucNang">Sửa</a>
                                                    @if (item.StatusDel == 1)
                                                    {
                                                        <a class="dropdown-item" onclick="UpdateStatusDel('@item.MaChucNang', 2, '@controller')">Ngưng sử dụng</a>
                                                    }
                                                    else if (item.StatusDel == 2)
                                                    {
                                                        <a class="dropdown-item" onclick="UpdateStatusDel('@item.MaChucNang', 1, '@controller')">Sử dụng</a>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td align="center">@(++i)</td>
                                        <td align="center">@Html.DisplayFor(modelItem => item.MaChucNang)</td>
                                        <td align="center">@Html.DisplayFor(modelItem => item.TenChucNang)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NhomChucNang)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function() {
            $('#example').DataTable({
                processing: true,
                serverSide: true,
                ajax: {
                    url: '@Url.Action("GetData", "ChucNang")',
                    type: 'GET',
                    data: function(d) {
                        return $.extend({}, d, {
                            search: $('#search').val(),
                            statusDel: $('#statusDel').val()
                        });
                    },
                    dataSrc: function(json) {
                        console.log(json); // Kiểm tra dữ liệu
                        return json.data;
                    }
                },
                columns: [
                    { data: null, defaultContent: '', orderable: false },
                    { data: 'MaChucNang' },
                    { data: 'TenChucNang' },
                    { data: 'NhomChucNang' },
                    { data: 'StatusDel' }
                ],
                order: [[1, 'asc']] // Sắp xếp mặc định theo cột đầu tiên
            });
        });
    </script>
}


